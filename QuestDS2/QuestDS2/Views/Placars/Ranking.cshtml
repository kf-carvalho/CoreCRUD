@model IEnumerable<QuestDS2.Models.Placar>

@{
    ViewData["Title"] = "Ranking";
}

<h1>Ranking</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Jogador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pontos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Jogador.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pontos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlacarId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlacarId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlacarId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
